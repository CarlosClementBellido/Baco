<UserControl x:Class="Baco.Windows.HubWindow.GroupsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Baco.Windows.HubWindow"
             xmlns:rsswindow="clr-namespace:Baco.Windows.RSSWindow"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="Blue">


    <DockPanel LastChildFill="True">


        <Grid>
            <local:ChatControl Visibility="Hidden" x:Name="LocalChatControl" Grid.Column="0"/>
            <rsswindow:RSSWindow Visibility="Visible" x:Name="RSSWindowControl" Grid.Column="0"/>
        </Grid>

    </DockPanel>
</UserControl>
